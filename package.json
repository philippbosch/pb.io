{
  "name": "pb.io",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently 'npm run dev:html' 'npm run dev:css' 'npm run dev:images' 'npm run dev:fonts' 'npm run dev:server'",
    "dev:html": "fswatch -o src/index.jsx | xargs -n1 -I{} node render-html.js",
    "dev:css": "tailwindcss -i ./src/css/styles.css -o ./dist/css/styles.css --watch",
    "dev:images": "cp -R src/images dist/",
    "dev:fonts": "cp -R src/fonts dist/",
    "dev:server": "web-dev-server --root-dir ./dist --open --watch",
    "build": "npm run build:html && npm run build:css && npm run build:images && npm run build:fonts",
    "build:html": "node render-html.js",
    "build:css": "tailwindcss --minify -i ./src/css/styles.css -o ./dist/css/styles.css",
    "build:images": "cp -R src/images dist/",
    "build:fonts": "cp -R src/fonts dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/philippbosch/pb.io.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/philippbosch/pb.io/issues"
  },
  "homepage": "https://github.com/philippbosch/pb.io#readme",
  "devDependencies": {
    "@web/dev-server": "0.1.31",
    "concurrently": "7.1.0",
    "jsx-template-engine": "1.0.0",
    "tailwindcss": "3.0.24",
    "tailwindcss-hyphens": "0.1.0"
  }
}
